<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_gravity="top|left"
        android:layout_weight="1"
        app:cardCornerRadius="0dp"
        app:elevation="5dp"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:id="@+id/image_restaurant"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top|left"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_download_error" />

            <TextView
                android:id="@+id/text_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_restaurant"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jost_bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_restaurant"
                android:fontFamily="@font/jost"
                android:textSize="@dimen/font_small" />

            <ImageView
                android:id="@+id/image_clock"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/text_address"
                android:layout_margin="6dp"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/text_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_address"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_toEndOf="@id/image_clock"
                android:fontFamily="@font/jost"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/font_small" />

            <ImageView
                android:id="@+id/image_phone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/text_open"
                android:layout_margin="6dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_open"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:layout_toEndOf="@id/image_phone"
                android:fontFamily="@font/jost"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_phone"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:fontFamily="@font/jost_bold"
            android:layout_marginBottom="10dp"
            android:text="ZamÃ³w online!"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_medium" />


    </androidx.cardview.widget.CardView>
</LinearLayout>
